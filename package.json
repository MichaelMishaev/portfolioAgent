{
  "name": "portfolioweb",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack -p 3500",
    "build": "next build",
    "start": "next start -p 3500",
    "lint": "next lint",
    "postinstall": "prisma generate",
    "generate-previews": "tsx scripts/generate-previews.ts",
    "regenerate-service": "tsx scripts/regenerate-service-previews.ts",
    "regenerate-single": "tsx scripts/regenerate-single.ts",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "test:integrity": "jest __tests__/template-translation-integrity.test.ts",
    "test:all": "npm run test:integrity && npm run test",
    "audit:text-colors": "node scripts/audit-text-colors.js",
    "audit:text-colors:ci": "node scripts/audit-text-colors.js --ci",
    "fix:text-colors": "node scripts/fix-text-colors.js",
    "fix:text-colors:dry": "node scripts/fix-text-colors.js --dry-run",
    "fix:dark-mode": "node scripts/fix-dark-mode-classes.js",
    "fix:dark-mode:dry": "node scripts/fix-dark-mode-classes.js --dry-run",
    "test:api": "bash tests/run-tests.sh",
    "test:api:watch": "nodemon --watch 'app/api/**/*' --watch 'lib/**/*' --exec 'bash tests/run-tests.sh'",
    "test:admin": "npx dotenv-cli -e .env.local -- npx tsx tests/api/admin.test.ts",
    "test:all-api": "npm run test:api && npm run test:admin"
  },
