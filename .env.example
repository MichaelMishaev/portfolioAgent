# Example Environment Variables
# Copy this to .env.local and fill in your values

# ============================================
# DISCOUNT SYSTEM CONFIGURATION
# ============================================

# Database (Railway PostgreSQL)
# Get from: Railway Dashboard > Database > Variables
DATABASE_URL="postgresql://postgres:PASSWORD@HOST:PORT/DATABASE"
DATABASE_URL_UNPOOLED="postgresql://postgres:PASSWORD@HOST:PORT/DATABASE"

# Next.js (Update for production)
NEXT_PUBLIC_URL="http://localhost:3000"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="" # Generate: openssl rand -base64 32

# Stripe Payment Gateway
# Get from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..." # After creating webhook endpoint

# Redis for Rate Limiting (Optional - Upstash Free Tier)
# Get from: https://upstash.com/
UPSTASH_REDIS_URL=""
UPSTASH_REDIS_TOKEN=""

# Email Notifications (Optional)
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@yourdomain.com"

# Fraud Prevention APIs (Optional but Recommended)
IP_QUALITY_API_KEY="" # https://www.ipqualityscore.com/
RECAPTCHA_SECRET_KEY="" # https://www.google.com/recaptcha/admin
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=""

# Monitoring & Error Tracking (Optional)
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""

# Cron Job Security
CRON_SECRET="" # Generate: openssl rand -hex 32

# Admin Panel Security
ADMIN_API_KEY="" # Generate: openssl rand -hex 32

# ============================================
# EXISTING CONFIGURATION
# ============================================

# Analytics (Optional)
NEXT_PUBLIC_ANALYTICS_ID=

# CMS Integration (Optional)
NEXT_PUBLIC_CMS_API_URL=

# Contact Form (Optional)
NEXT_PUBLIC_FORM_ENDPOINT=
